#!/bin/bash

# rmlatexfiles 
#
# Remove all files generated by latex and bibtex
# in the current directory

# Parse the arguments
if [ $# != 0 ]; then
	echo "Usage: $(basename $0)"
	echo "Remove all files generated by latex and bibtex in the current directory."
	exit
fi

# Remove the files
rm -vf *.aux *.fdb_latexmk *.log *.out *.lof *.brf *.synctex.gz *.bbl *.blg *.maf *.mtc *.mtc? *.ind *.ilg *.idx *.toc *.nav *.snm *.vrb *.fls *.fmt

